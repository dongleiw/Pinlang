// 变量定义
{
	printf("###### var definition\n");
	var i = (3+5-4)*3/2;
	printf("i = %d\n", i);

	var f = (5+1.0) - (3-1.1) + (4/2.0);
	printf("f = %.2f\n", f);

	var StudentId = int;
